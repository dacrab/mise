---
import Layout from '@/layouts/Layout.astro';
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import { getConvexClient, api } from '@/convex-server';
import { Image } from 'astro:assets';

const { username } = Astro.params;
if (!username) return Astro.redirect('/404');

const convex = getConvexClient();
const chef = await convex.query(api.users.getByUsername, { username });

if (!chef) return Astro.redirect('/404');

const chefRecipes = await convex.query(api.recipes.getByUser, { userId: chef._id });
const publishedRecipes = chefRecipes.filter(r => r.status === 'published');

export const prerender = false;
---

<Layout title={`${chef.name}'s Kitchen â€” mise`}>
    <Header backLink={{ href: '/', label: 'Back' }} />

    <main class="pt-20 pb-24">
        <div class="wrapper">
            <!-- Profile -->
            <div class="py-12 md:py-16 border-b border-cream-dark mb-10">
                <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6">
                    <div class="w-24 h-24 rounded-full bg-sage/15 overflow-hidden shrink-0">
                        {chef.image ? (
                            <img src={chef.image} alt={chef.name} class="w-full h-full object-cover" />
                        ) : (
                            <div class="w-full h-full flex items-center justify-center text-2xl font-medium text-sage">
                                {(chef.name || 'U')[0]}
                            </div>
                        )}
                    </div>
                    <div class="text-center sm:text-left">
                        <h1 class="font-serif text-3xl font-medium mb-1">{chef.name}</h1>
                        <p class="text-stone text-sm mb-3">@{chef.username}</p>
                        {chef.bio && <p class="text-charcoal-light max-w-md">{chef.bio}</p>}
                        <div class="mt-4 flex items-center justify-center sm:justify-start gap-4 text-sm">
                            <span class="text-charcoal"><strong>{publishedRecipes.length}</strong> recipes</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recipes -->
            <section>
                <h2 class="font-serif text-xl font-medium mb-6">Recipes</h2>

                {publishedRecipes.length > 0 ? (
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        {publishedRecipes.map((recipe) => (
                            <a href={`/recipe/${recipe.slug}`} class="recipe-card group">
                                <div class="relative overflow-hidden">
                                    {recipe.coverImageUrl ? (
                                        <Image src={recipe.coverImageUrl} alt={recipe.title} width={600} height={450} class="recipe-card-image" loading="lazy" />
                                    ) : (
                                        <div class="aspect-[4/3] bg-cream-dark flex items-center justify-center">
                                            <svg class="text-stone-light" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                                <path d="M6 13.87A4 4 0 0 1 7.41 6a5.11 5.11 0 0 1 1.05-1.54 5 5 0 0 1 7.08 0A5.11 5.11 0 0 1 16.59 6 4 4 0 0 1 18 13.87V21H6Z"/>
                                            </svg>
                                        </div>
                                    )}
                                    <span class="absolute top-3 left-3 tag bg-warm-white/90 backdrop-blur-sm">{recipe.category}</span>
                                </div>
                                <div class="p-5">
                                    <h3 class="font-serif text-lg font-medium mb-2 group-hover:text-sage transition-colors line-clamp-1">{recipe.title}</h3>
                                    <p class="text-sm text-stone line-clamp-2">{recipe.description}</p>
                                </div>
                            </a>
                        ))}
                    </div>
                ) : (
                    <div class="card p-12 text-center">
                        <p class="text-stone">No recipes published yet.</p>
                    </div>
                )}
            </section>
        </div>
    </main>

    <Footer />
</Layout>
