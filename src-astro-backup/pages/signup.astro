---
import Layout from '@/layouts/Layout.astro';
import SignupForm from '@/components/SignupForm';
---

<Layout title="Sign up — mise">
    <main class="min-h-screen grid lg:grid-cols-2">
        <!-- Left Panel -->
        <div class="hidden lg:flex flex-col justify-between p-12 bg-sage text-warm-white relative overflow-hidden">
            <a href="/" class="font-serif text-2xl font-semibold relative z-10">mise</a>
            
            <div class="relative z-10 max-w-md">
                <blockquote class="font-serif text-3xl italic leading-snug mb-4">
                    "Anyone can cook, but only the fearless can be great."
                </blockquote>
                <cite class="text-sm text-warm-white/70 not-italic">
                    — Chef Gusteau
                </cite>
            </div>

            <p class="text-xs text-warm-white/60 relative z-10">
                Join the community
            </p>
        </div>

        <!-- Right Panel -->
        <div class="flex items-center justify-center p-6 bg-cream">
            <div class="w-full max-w-sm">
                <div class="lg:hidden mb-10 text-center">
                    <a href="/" class="font-serif text-2xl font-semibold text-charcoal">mise</a>
                </div>
                <SignupForm client:idle />
            </div>
        </div>
    </main>
</Layout>
