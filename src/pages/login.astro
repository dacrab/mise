---
import Layout from '@/layouts/Layout.astro';
import LoginForm from '@/components/LoginForm';
---

<Layout title="Sign in — mise">
    <main class="min-h-screen grid lg:grid-cols-2">
        <!-- Left Panel -->
        <div class="hidden lg:flex flex-col justify-between p-12 bg-charcoal text-cream relative overflow-hidden">
            <a href="/" class="font-serif text-2xl font-semibold relative z-10">mise</a>
            
            <div class="relative z-10 max-w-md">
                <blockquote class="font-serif text-3xl italic leading-snug mb-4">
                    "Cooking is like love. It should be entered into with abandon or not at all."
                </blockquote>
                <cite class="text-sm text-stone-light not-italic">
                    — Harriet Van Horne
                </cite>
            </div>

            <p class="text-xs text-stone relative z-10">
                A place for home cooks
            </p>
        </div>

        <!-- Right Panel -->
        <div class="flex items-center justify-center p-6 bg-cream">
            <div class="w-full max-w-sm">
                <div class="lg:hidden mb-10 text-center">
                    <a href="/" class="font-serif text-2xl font-semibold text-charcoal">mise</a>
                </div>
                <LoginForm client:idle />
            </div>
        </div>
    </main>
</Layout>
