---
import Layout from '@/layouts/Layout.astro';
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import { recipes } from '@/db';
import { desc, ilike, or, eq, and } from 'drizzle-orm';
import { Image } from 'astro:assets';

const search = Astro.url.searchParams.get('q') || '';
const category = Astro.url.searchParams.get('category') || '';

const CATEGORIES = ['Breakfast', 'Lunch', 'Dinner', 'Dessert', 'Vegan', 'Vegetarian', 'Quick & Easy', 'Baking', 'Italian', 'Asian', 'Mexican'];

const db = Astro.locals.db;

// Build query conditions
const conditions = [eq(recipes.status, 'published')];
if (search) {
    const searchCond = or(ilike(recipes.title, `%${search}%`), ilike(recipes.description, `%${search}%`));
    if (searchCond) conditions.push(searchCond);
}
if (category) conditions.push(eq(recipes.category, category));

const allRecipes = await db.select().from(recipes)
    .where(and(...conditions as any))
    .orderBy(desc(recipes.createdAt))
    .limit(50);

const hasFilters = search || category;

export const prerender = false;
---

<Layout title="Mise — Discover and share amazing recipes">
    <Header user={Astro.locals.user} />

    <main class="pt-24 pb-20 min-h-screen">
        <!-- Hero -->
        <section class="wrapper py-16 md:py-24 text-center">
            <h1 class="display-heading mb-6 animate-fade-in-up">
                Taste the world, <br /><span class="text-brand-primary italic">one plate at a time.</span>
            </h1>
            <p class="prose-text text-lg md:text-xl max-w-2xl mx-auto mb-10">
                Discover curated recipes from home cooks around the globe. Join our community to share your culinary secrets.
            </p>

            <!-- Search Form -->
            <form action="/" method="get" class="max-w-2xl mx-auto">
                <div class="flex flex-col md:flex-row gap-3">
                    <div class="relative flex-1 group">
                        <input type="text" name="q" placeholder="Search for 'Avocado Toast'..." value={search} class="input-field pl-12" />
                        <svg class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand-primary transition-colors" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
                    </div>
                    <select name="category" class="input-field md:w-48">
                        <option value="">All Categories</option>
                        {CATEGORIES.map(cat => <option value={cat} selected={category === cat}>{cat}</option>)}
                    </select>
                    <button type="submit" class="btn-primary px-8">Find</button>
                </div>
            </form>

            {hasFilters && (
                <div class="mt-6 flex items-center justify-center gap-2 animate-fade-in">
                    <p class="text-gray-600">
                        Showing results for
                        {search && <span class="font-bold text-brand-text"> "{search}"</span>}
                        {search && category && <span> in</span>}
                        {category && <span class="font-bold text-brand-text"> {category}</span>}
                    </p>
                    <a href="/" class="text-sm text-brand-primary font-medium hover:underline ml-2">× Clear</a>
                </div>
            )}
        </section>

        <!-- Recipe Grid -->
        <section class="wrapper">
            <div class="flex items-center justify-between mb-8 border-b border-gray-100 pb-4">
                <h2 class="section-heading mb-0">{hasFilters ? 'Search Results' : 'Fresh from the Kitchen'}</h2>
                <span class="text-sm text-gray-500 font-medium">{allRecipes.length} recipes</span>
            </div>

            {allRecipes.length > 0 ? (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {allRecipes.map((recipe) => (
                        <a href={`/recipe/${recipe.slug}`} class="recipe-card group h-full">
                            <div class="recipe-card-image-wrapper">
                                {recipe.coverImage ? (
                                    <Image src={recipe.coverImage} alt={recipe.title} width={600} height={450} class="recipe-card-image" loading="lazy" />
                                ) : (
                                    <div class="flex items-center justify-center h-full bg-brand-accent/30 text-brand-primary/50">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M3 14h18"/><path d="M4 14v4a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-4"/><path d="M12 2v20"/></svg>
                                    </div>
                                )}
                                <span class="absolute top-3 left-3 badge bg-white/90 backdrop-blur px-2 py-1 rounded-md text-[10px] font-bold shadow-sm text-brand-text uppercase tracking-widest">
                                    {recipe.category}
                                </span>
                            </div>
                            <div class="recipe-card-content">
                                <h3 class="font-serif text-xl font-bold mb-2 group-hover:text-brand-primary transition-colors line-clamp-1">{recipe.title}</h3>
                                <p class="text-gray-600 text-sm line-clamp-2 mb-4 flex-1">{recipe.description || "A delicious recipe waiting to be discovered."}</p>
                                <div class="flex items-center justify-between pt-4 border-t border-gray-100 mt-auto">
                                    <span class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">
                                        {new Date(recipe.createdAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric' })}
                                    </span>
                                    <span class="text-xs font-bold text-brand-primary uppercase tracking-tighter">View →</span>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            ) : (
                <div class="flex flex-col items-center justify-center py-20 px-4 text-center border-2 border-dashed border-gray-200 rounded-2xl bg-white/50">
                    <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4 text-gray-400">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
                    </div>
                    <h3 class="text-xl font-bold mb-2 font-serif">No recipes found</h3>
                    <p class="text-gray-500 max-w-sm mb-6">Try exploring different categories!</p>
                    <a href="/" class="btn-outline">Clear filters</a>
                </div>
            )}
        </section>
    </main>

    <Footer />
</Layout>
